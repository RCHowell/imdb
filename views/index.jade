extends layout

block content
	header
		#header-left
			div.button
				img(src="/images/home.png")
		form#search-form
			#header-input
				input(id="searchbar", type="text", placeholder="Search Movies")
			#header-right
				div.button(onclick="search()")
					img(src="/images/search.png")
	#main
		#content
			h1 Welcome to the Movie Database
			h2 What is this?
			p This site gets data using the Open Movie Database API and puts it in an easy to read and lightweight format.